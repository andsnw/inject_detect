.ij-dashboard

  p.instructions
    color rgba(0,0,0,.4)
    font-size 16px
    line-height 1.6
    margin 1em 0

  .section
    margin-top 4em

  .content.configuration
    display flex!important
    & > div
      flex 1

  h1.header
    font-weight 100
    text-align center
    text-transform uppercase

  h3.sub.header
    font-weight 100
    font-size 18px

  .ui.cards
    margin-top 0em
    .card
      background-color #f8f8f8
      box-shadow none

  .notification.card
    font-size 16px
    .content
      padding 6px
      p
        line-height 36px
        margin-left 6px
    .buttons
      .button
        margin 0

